<!DOCTYPE html>
<html>
  <head>
    <title>RailsWatchList</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <style>
      .movie-list-container {
        display: flex;
        flex-wrap: wrap; /* Allow items to wrap to the next line */
        gap: 20px; /* Adjust the spacing between movie items */
      }

      .movie-item {
        flex: 0 1 calc(33.33% - 20px); /* Set flex-basis to 33.33% minus the gap */
        /* Adjust as needed for the desired number of items per row */
      }
    </style>
  </head>

  <body>
    <div class="container mt-4">
      <h2>Movies</h2>
      <div class="movie-list-container">
        <% @movies.each do |movie| %>
          <div class="movie-item">
            <div class="list-group-item">
              <h4 class="mb-3"><strong>Title:</strong> <%= movie.title %></h4>
              <div class="bg-color-movie mb-3">
                <%= link_to movie_path(movie) do%>
                  <img src="<%= movie.poster_url %>" class="img-fluid" style="max-height: 200px;">
                <% end %>
                <div class= "discription" ><p><strong>Overview:</strong> <%= movie.overview %></p>
                <p><strong>Rating:</strong> <%= movie.rating %></p>
                <%= link_to "Delete", movie_path(movie), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
                </div> 
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Include Bootstrap JS (if needed) -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script> -->
  </body>
</html>
