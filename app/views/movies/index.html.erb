<style>
  .movie-item {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    margin-bottom: 20px;
  }
</style>

<body>
  <div class="container mt-4">
    <h2>Movies</h2>
    <div class="movie-list-container">
      <% @movies.each do |movie| %>
        <div class="movie-item">
          <div class="list-group-item">
            <h4 class="mb-3"><strong>Title:</strong> <%= movie.title %></h4>
            <div class="movie-details">
              <%= link_to movie_path(movie) do %>
                <img src="<%= movie.poster_url %>" class="movie-poster" alt="<%= movie.title %> Poster">
              <% end %>
              <div class="description">
                <p><strong>Overview:</strong> <%= movie.overview %></p>
                <p><strong>Rating:</strong> <%= movie.rating %></p>
                <%= link_to "Delete", movie_path(movie), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
              </div> 
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Include Bootstrap JS (if needed) -->
  <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script> -->
</body>
